<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clickforhelp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <permission
        android:name="com.example.clickforhelp.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.example.clickforhelp.permission.C2D_MESSAGE" />

    <!--
     The following two permissions are not required to use
     Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.clickforhelp.controllers.MainActivity"
            android:icon="@drawable/nyu_white"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.clickforhelp.controllers.AuthenticationActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.clickforhelp.controllers.SettingsActivity"
            android:icon="@drawable/nyu_white"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:parentActivityName="com.example.clickforhelp.controllers.MainActivity" >
        </activity>
        <activity
            android:name="com.example.clickforhelp.controllers.ForgotPasswordActivity"
            android:icon="@drawable/nyu_white"
            android:launchMode="singleInstance" >
        </activity>

        <receiver
            android:name="com.example.clickforhelp.controllers.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.example.clickforhelp" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.example.clickforhelp.controllers.PowerConnectionReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.example.clickforhelp.controllers.BatteryLevelReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.ACTION_BATTERY_LOW" />
                <action android:name="android.intent.action.ACTION_BATTERY_OKAY" />
            </intent-filter>
        </receiver>

        <service android:name="com.example.clickforhelp.controllers.GcmIntentService" />
        <service
            android:name="com.example.clickforhelp.controllers.LocationUpdateService"
            android:exported="false" />
        <service
            android:name="com.example.clickforhelp.controllers.ReceiveLocationService"
            android:exported="false" >
        </service>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDpwmsZYZ9bg2g8e94WNqde4l-hmptrXRY" />
    </application>

</manifest>