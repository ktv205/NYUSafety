<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nyupurple"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="10dp" >

    <EditText
        android:id="@+id/newpassword_edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/string_text_password"
        android:inputType="textPassword"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textColorHint="@color/ghostwhite" >
    </EditText>
    
    <EditText
        android:id="@+id/newpassword_edit_reenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/string_text_repassword"
        android:inputType="textPassword"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textColorHint="@color/ghostwhite" >
    </EditText>


    <Button
        android:id="@+id/newpassword_button_submit"
        style="@style/buttons"
        android:text="@string/string_text_submit" >
    </Button>

</LinearLayout>