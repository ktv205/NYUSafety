<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_parent0_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/welcome_button_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/string_button_signup" >
    </Button>

    <TextView
        android:id="@+id/welcome_text_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_button_signup"
        android:layout_centerInParent="true"
        android:text="@string/string_text_member" >
    </TextView>

    <TextView
        android:id="@+id/welcome_text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_button_signup"
        android:layout_toEndOf="@id/welcome_text_member"
        android:layout_toRightOf="@id/welcome_text_member"
        android:text="@string/string_text_login" >
    </TextView>

</RelativeLayout>